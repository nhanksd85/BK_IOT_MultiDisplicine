<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iot.bku.bkiot.MainActivity"
    android:background="@drawable/btn_background"
    android:padding="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="2dp"
                android:visibility="visible"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSetting"
                android:textColor="#ffffff"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:text="CÀI ĐẶT"/>
            <Button
                android:id="@+id/btnExit"
                android:textColor="#ffffff"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:text="THOÁT"/>

            <ImageView
                android:layout_margin="2dp"
                android:id="@+id/imgWifiStatus"
                android:src="@drawable/icon_wifi_3"
                android:scaleType="fitCenter"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="left|bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_location" />
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/txtLocation"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="left|bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hồ Chí Minh"/>


        </LinearLayout>
        <LinearLayout
            android:gravity="right|bottom"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">



            <TextView
                android:id="@+id/txtTimerCounter"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginRight="20dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_temperature" />
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/txtTemp"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00°"
                android:layout_marginRight="20dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_humidity" />
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/txtHumi"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00%"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="3dp"
                android:background="#20000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/caption_media_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bụi PM 1.0 (μ/m3)"
                    android:textColor="@color/colorTextCaption"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPM_1_0"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorTextCaption"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/caption_text_size"
                        android:textStyle="bold"
                        android:text="29"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgTempStatus"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_very_satisfy" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="3dp"
                android:background="#20000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/caption_media_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bụi PM 2.5 (μ/m3)"
                    android:textColor="@color/colorTextCaption"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPM_2_5"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorTextCaption"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/caption_text_size"
                        android:textStyle="bold"
                        android:text="7"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgPHStatus"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_very_satisfy" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="3dp"
                android:background="#20000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/caption_media_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bụi PM 10 (μ/m3)"
                    android:textColor="@color/colorTextCaption"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPM_10"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorTextCaption"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/caption_text_size"
                        android:textStyle="bold"
                        android:text="4"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgDOStatus"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_very_satisfy" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="3dp"
                android:background="#20000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/caption_media_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khí CO2 (ppm)"
                    android:textColor="@color/colorTextCaption"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCO2"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorTextCaption"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/caption_text_size"
                        android:textStyle="bold"
                        android:text="29"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgSalinityStatus"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_very_satisfy" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="3dp"
                android:background="#20000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/caption_media_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khí CO (ppm)"
                    android:textColor="@color/colorTextCaption"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCO"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorTextCaption"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/caption_text_size"
                        android:textStyle="bold"
                        android:text="7"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/imgTSSStatus"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_very_satisfy" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="3dp"
                android:background="#20000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/caption_media_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Formaldehyd (μ/m3)"
                    android:textColor="@color/colorTextCaption"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtHCHO"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorTextCaption"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/caption_text_size"
                        android:textStyle="bold"
                        android:text="4"/>

                    <ImageView
                        android:visibility="invisible"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_very_satisfy" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
